@using WebApplication1.Models;
@using System;
@{
    ViewBag.Title = "show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
  font-family: Arial, Helvetica, sans-serif;
  background-color:rgb(244,247,250);
}
    /*table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}*/
    
    .video-container {
position: relative;
padding-bottom: 26.25%;
padding-top: 30px; height: 0; overflow: hidden;
}

.video-container iframe,
.video-container object,
.video-container embed {
position: absolute;
top: 0;
left: 0;
width: 100%;
height: 90%;
}

</style>
<br />
<div class="container">

    <div class="video-container"><iframe width="553" height="300" src="@Url.Content(@ViewBag.data.trail)" frameborder="0" allowfullscreen> </iframe></div>

</div>
<div class="container" style="background-color:white;">
    <table style="width:100%;">
       
        <tr>
            <td valign="top">
                <h1>@ViewBag.data.displayn</h1>
                <p style="font-size:large">
                    • Review - @ViewBag.data.review <br />
                    • @ViewBag.data.duration
                    • @ViewBag.data.release.ToShortDateString()
                    • @ViewBag.data.age </ p >

                <p style="font-size:larger">@ViewBag.data.actors</p>
            </td>
            <td style="text-align:right">
                <img src="~/@Url.Content(@ViewBag.data.image)" style="width:300px;height:300px;">
            </td>
            </tr>
        </table>
</div>

<br />

<div class="container" style="background-color:white;">
    <h2>Available Shows</h2>
    <table class="table table-hover">
        <tr>
            <th scope="col">Theatre Name</th>
            <th scope="col">Show timing</th>
            <th scope="col">&nbsp; &nbsp; &nbsp;&nbsp;&nbsp;  #</th>
           
        </tr>
        
        @foreach (bookticket s in ViewBag.book)
        {
            if (DateTime.Compare(ViewBag.t1, s.showtime) < 0)
            {
                    <tr>
                        <td>
                            @s.name 
                        </td>
                        <td>
                            
                            
                            @s.showtime.ToString("hh:mm tt")
                        </td>
                        <td>
                            <button type="button" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("fun", "temp", new { obj = s.timeid, obj2 = s.theatreid, obj3=s.name, obj4=s.showtime.ToString("hh:mm tt") }) + "'");"  > Book Seats</button>
                            
                        </td>
        </tr>
            }
        }
    </table>


</div>
<br />



